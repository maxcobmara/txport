- provide(:title, 'Vehicle Road Tax Details')
- model_class = VehicleRoadTax
.page-header
  %h1= t 'vehicle_road_taxes.title', :default => model_class.model_name.human
%p#notice= notice

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:vehicle_id) + ":"
  %dd= @vehicle_road_tax.vehicle.try(:reg_no) 

%dl.dl-horizontal
  %dt= t 'vehicle_road_taxes.start_on', :default =>  model_class.human_attribute_name(:start_on) + ":"
  %dd= @vehicle_road_tax.start_on 

%dl.dl-horizontal
  %dt= t 'vehicle_road_taxes.end_on', :default =>  model_class.human_attribute_name(:end_on) + ":"
  %dd= @vehicle_road_tax.end_on 

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:amount) + ":"
  %dd= ringgols(@vehicle_road_tax.amount)

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), vehicle_road_taxes_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_vehicle_road_tax_path(@vehicle_road_tax), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    vehicle_road_taxes_path(@vehicle_road_tax),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                             