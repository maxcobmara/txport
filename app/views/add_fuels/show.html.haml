- provide(:title, 'Add Fuels')
- model_class = AddFuel
.page-header
  %h1= t 'add_fuels.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= t 'add_fuels.unit_fuel_id', :default => model_class.human_attribute_name(:depot_fuel_id) + ":"
  %dd= check_kin {@add_fuel.unit_fuel.month_unit}
%dl.dl-horizontal
  %dt= t 'add_fuels.fuel_type_id', :default => model_class.human_attribute_name(:fuel_tank_id) + ":"
  %dd= check_kin {@add_fuel.fuel_type.name}
%dl.dl-horizontal
  %dt= t 'add_fuels.description', :default => model_class.human_attribute_name(:current) + ":"
  %dd= @add_fuel.description
%dl.dl-horizontal
  %dt= t 'add_fuels.quantity', :default => model_class.human_attribute_name(:current) + ":"
  %dd= @add_fuel.quantity.to_i
%dl.dl-horizontal
  %dt= t 'add_fuels.unit_type_id', :default => model_class.human_attribute_name(:unit_type_id) + ":"
  %dd= check_kin {@add_fuel.unit_type.description}
  
.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), add_fuels_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_add_fuel_path(@add_fuel), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    add_fuel_path(@add_fuel),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |

