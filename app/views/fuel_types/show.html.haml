- provide(:title, 'Fuel type Details')
- model_class = FuelType
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:shortname) + ":"
  %dd=  @fuel_type.shortname
%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:name) + ":"
  %dd=  @fuel_type.name

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), fuel_types_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_fuel_type_path(@fuel_type), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    fuel_type_path(@fuel_type),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |
