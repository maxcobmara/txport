- provide(:title, 'Fuel Issueds')
- model_class = FuelIssued
.page-header
  %h1= t 'fuel_issueds.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= t 'fuel_issueds.depot_fuel_id', :default => model_class.human_attribute_name(:id_no) + ":"
  %dd= check_kin {@fuel_issued.depot_fuel.month_depot}
%dl.dl-horizontal
  %dt= t 'fuel_issueds.fuel_type_id', :default => model_class.human_attribute_name(:rank_id) + ":"
  %dd= check_kin {@fuel_issued.fuel_type.name}
%dl.dl-horizontal
  %dt= t 'fuel_issueds.quantity', :default => model_class.human_attribute_name(:rank_id) + ":"
  %dd= @fuel_issued.quantity
%dl.dl-horizontal
  %dt= t 'fuel_issueds.unit_type_id', :default => model_class.human_attribute_name(:rank_id) + ":"
  %dd= check_kin {@fuel_issued.unit_type.description}
  
.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), fuel_issueds_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_fuel_issued_path(@fuel_issued), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    fuel_issued_path(@fuel_issued),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |
